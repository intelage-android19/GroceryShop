                            android:gravity="center_vertical"
                            android:hint="@string/str_email"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:paddingStart="@dimen/_20sdp"
                            android:paddingLeft="@dimen/_20sdp"
                            android:paddingEnd="@dimen/_20sdp"
                            android:paddingRight="@dimen/_20sdp"
                            android:singleLine="true"
                            android:textSize="@dimen/font_regular"
                            app:fontFamily="@string/font_regular" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/colorWhite"
                        android:innerRadius="0dp"
                        android:shape="ring"
                        android:thicknessRatio="1.9"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardElevation="@dimen/_3sdp"
                        app:cardUseCompatPadding="true">

                        <com.efunhub.groceryshop.widget.CustomTextView
                            android:id="@+id/tvProfileAddress"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:background="@null"
                            android:fontFamily="@string/font_regular"
                            android:gravity="center_vertical"
                            android:hint="@string/str_address"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:paddingStart="@dimen/_20sdp"
                            android:paddingLeft="@dimen/_20sdp"
                            android:paddingEnd="@dimen/_20sdp"
                            android:paddingRight="@dimen/_20sdp"
                            android:singleLine="true"
                            android:textSize="@dimen/font_regular"
                            app:fontFamily="@string/font_regular" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/colorWhite"
                        android:innerRadius="0dp"
                        android:shape="ring"
                        android:thicknessRatio="1.9"
                        android:visibility="visible"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardElevation="@dimen/_3sdp"
                        app:cardUseCompatPadding="true">

                        <com.efunhub.groceryshop.widget.CustomTextView
                            android:id="@+id/tvArea"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:background="@null"
                            android:fontFamily="@string/font_regular"
                            android:gravity="center_vertical"
                            android:hint="@string/str_area"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:paddingStart="@dimen/_20sdp"
                            android:paddingLeft="@dimen/_20sdp"
                            android:paddingEnd="@dimen/_20sdp"
                            android:paddingRight="@dimen/_20sdp"
                            android:singleLine="true"
                            android:textSize="@dimen/font_regular"
                            app:fontFamily="@string/font_regular" />

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/colorWhite"
                        android:innerRadius="0dp"
                        android:shape="ring"
                        android:thicknessRatio="1.9"
                        android:visibility="visible"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardElevation="@dimen/_3sdp"
                        app:cardUseCompatPadding="true">

                        <com.efunhub.groceryshop.widget.CustomTextView
                            android:id="@+id/tvPincode"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:background="@null"
                            android:fontFamily="@string/font_regular"
                            android:gravity="center_vertical"
                            android:hint="@string/str_pin"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:paddingStart="@dimen/_20sdp"
                            android:paddingLeft="@dimen/_20sdp"
                            android:paddingEnd="@dimen/_20sdp"
                            android:paddingRight="@dimen/_20sdp"
                            android:singleLine="true"
                            android:textSize="@dimen/font_regular"
                            app:fontFamily="@string/font_regular" />

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/colorWhite"
                        android:innerRadius="0dp"
                        android:shape="ring"
                        android:thicknessRatio="1.9"
                        android:visibility="visible"
                        android:layout_marginBottom="@dimen/_10sdp"

                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardElevation="@dimen/_3sdp"
                        app:cardUseCompatPadding="true">

                        <com.efunhub.groceryshop.widget.CustomTextView
                            android:id="@+id/tvCity"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:background="@null"

                            android:fontFamily="@string/font_regular"
                            android:gravity="center_vertical"
                            android:hint="@string/str_city"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:paddingStart="@dimen/_20sdp"
                            android:paddingLeft="@dimen/_20sdp"
                            android:paddingEnd="@dimen/_20sdp"
                            android:paddingRight="@dimen/_20sdp"
                            android:singleLine="true"
                            android:textSize="@dimen/font_regular"
                            app:fontFamily="@string/font_regular" />

                    </androidx.cardview.widget.CardView>

