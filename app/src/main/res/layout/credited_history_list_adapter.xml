<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/rlChangePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:orientation="horizontal">

                <com.efunhub.groceryshop.widget.CustomTextView
                    android:id="@+id/number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transfered Contact"
                    android:textSize="14sp" />

                <com.efunhub.groceryshop.widget.CustomTextView
                    android:id="@+id/tvnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_marginStart="10dp"

                    android:layout_toRightOf="@+id/number"
                    android:textSize="14sp" />


                <com.efunhub.groceryshop.widget.CustomTextView
                    android:id="@+id/txtContact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3366998855"
                    android:layout_marginStart="10dp"

                    android:layout_toRightOf="@+id/tvnumber"
                    android:textSize="14sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:orientation="horizontal">

                <com.efunhub.groceryshop.widget.CustomTextView
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transfered Amount"
                    android:textSize="14sp" />

                <com.efunhub.groceryshop.widget.CustomTextView
                    android:id="@+id/tvAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@+id/amount"
                    android:textSize="14sp" />


                <com.efunhub.groceryshop.widget.CustomTextView
                    android:id="@+id/txtAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3366998855"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@+id/tvAmount"
                    android:textSize="14sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:orientation="horizontal">

                <com.efunhub.groceryshop.widget.CustomTextView
                    android:id="@+id/date"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textSize="14sp" />

                <com.efunhub.groceryshop.widget.CustomTextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@+id/date"
                    android:textSize="14sp" />


                <com.efunhub.groceryshop.widget.CustomTextView
                    android:id="@+id/txtDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3366998855"
                    android:maxLength="10"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@+id/tvDate"
                    android:textSize="14sp" />

            </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>