<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/llItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvBestSellingOfferPercent"
                        android:layout_width="60dp"
                        android:layout_height="23dp"
                        android:layout_margin="@dimen/_6sdp"
                        app:cardBackgroundColor="@color/colorAccent">


                        <com.efunhub.groceryshop.widget.CustomTextView
                            android:id="@+id/tvBestSellingOfferPercent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/_1sdp"
                            android:background="@color/colorAccent"
                            android:text="24% OFF"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_9sdp"
                            app:fontFamily="@string/font_regular" />

                    </androidx.cardview.widget.CardView>


                    <ImageView
                        android:id="@+id/ivBestSellingItemImage"
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="@dimen/_75sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10sdp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorLighterGray"
                    android:orientation="vertical">

                    <com.efunhub.groceryshop.widget.CustomTextView
                        android:id="@+id/tvBestSellingItemName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_19sdp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textColor="#777"
                        android:textSize="@dimen/font_18"
                        app:fontFamily="@string/font_state" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.efunhub.groceryshop.widget.CustomTextView
                            android:id="@+id/tvBestSellingItemPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_19sdp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:maxLines="1"
                            android:textColor="#777"
                            android:textSize="@dimen/font_16"
                            app:fontFamily="@string/font_graphik_semibold" />

                        <com.efunhub.groceryshop.widget.CustomTextView
                            android:id="@+id/tvBestSellingItemOfferPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_19sdp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:maxLines="1"
                            android:textColor="@color/colorTextBlack"
                            android:textSize="@dimen/font_16"
                            app:fontFamily="@string/font_graphik_semibold" />
                    </LinearLayout>

                    <com.efunhub.groceryshop.widget.CustomTextView
                        android:id="@+id/tvBestSellingItemQty"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_19sdp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/font_16"
                        app:fontFamily="@string/font_state" />

                    <com.efunhub.groceryshop.widget.CustomButton
                        android:id="@+id/btnBestSellingItemAdd"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@color/colorPrimary"
                        android:text="ADD"
                        android:textColor="@color/colorWhite"
                        app:fontFamily="@string/font_state" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</layout>