<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGRAY"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp"
        android:visibility="visible"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:src="@drawable/ic_cancel_black_24dp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp">


            <com.efunhub.groceryshop.widget.CustomEditText
                android:id="@+id/cetName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Full Name"
                android:inputType="text"
                android:singleLine="true"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_margin="@dimen/_10sdp">

            <com.efunhub.groceryshop.widget.CustomEditText
                android:id="@+id/cetContact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Contact"
                android:inputType="phone"
                android:maxLength="10"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="1"
                android:singleLine="true" />

            <View android:id="@+id/separator"
                android:background="@color/colorPrimary"
                android:layout_width = "1dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_centerVertical ="true"
           />

            <com.efunhub.groceryshop.widget.CustomEditText
                android:id="@+id/cetCountryCode"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Country Code"
                android:inputType="phone"
                android:layout_marginStart="@dimen/_5sdp"
                android:maxLength="10"
                android:singleLine="true" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp">

            <com.efunhub.groceryshop.widget.CustomEditText
                android:id="@+id/cetEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="E-Mail"
                android:inputType="textEmailAddress"
                android:singleLine="true"

                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp">


            <com.efunhub.groceryshop.widget.CustomEditText
                android:id="@+id/cetAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:inputType="textPostalAddress"
                android:singleLine="true" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp">


            <com.efunhub.groceryshop.widget.CustomEditText
                android:id="@+id/tvCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="City"
                android:inputType="textPostalAddress"
                android:singleLine="true" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp">


            <com.efunhub.groceryshop.widget.CustomEditText
                android:id="@+id/tvArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Area"
                android:inputType="textPostalAddress"
                android:singleLine="true" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp">


            <com.efunhub.groceryshop.widget.CustomEditText
                android:id="@+id/tvPincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pincode"
                android:inputType="textPostalAddress"
                android:singleLine="true" />

        </LinearLayout>

        <com.efunhub.groceryshop.widget.CustomButton
            android:id="@+id/btnUpdateProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="Update Profile"
            android:textColor="@color/colorWhite" />

    </LinearLayout>


</layout>